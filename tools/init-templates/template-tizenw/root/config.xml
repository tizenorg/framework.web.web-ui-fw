<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:tizen="http://tizen.org/ns/widgets" id="http://yourdomain/media-content-new" version="0.1.4" viewmodes="maximized">
    <tizen:application id="{%= tizenId %}.{%= name %}" package="{%= tizenId %}" required_version="2.1"/>
    <content src="src/index.html"/>
    <icon src="icon.png"/>
    <name>{%= name %}</name>
    <tizen:privilege name="http://tizen.org/privilege/content.read"/>
    <tizen:privilege name="http://tizen.org/privilege/content.write"/>
    <tizen:setting screen-orientation="portrait" context-menu="enable" background-support="disable" encryption="disable" install-location="auto"/>
</widget>
